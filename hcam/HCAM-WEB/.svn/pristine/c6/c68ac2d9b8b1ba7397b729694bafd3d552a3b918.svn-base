<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                xmlns:f="http://xmlns.jcp.org/jsf/core">

    <h:form id="form-edit">
        <p:dialog header="Modificar Estado" showEffect="fold" hideEffect="fold" widgetVar="dlg3" modal="true" >
            <p:panel id="panel" header="Ingrese los datos" style="margin-bottom:10px;">  
                <h:panelGrid id="gridEdit" columns="3" cellpadding="5">
                
                <h:outputLabel for="name" value="Nombre:" style="font-weight:bold" />
                <p:inputText id="name" value="#{fileStatusView.selectedFileStatus.nameFst}" required="true" label="Nombre: " validatorMessage="Introduzca datos correctos(Alfanuméricos, no mayor a 15)">
                     <f:validateRegex pattern="^[a-zA-Z0-9\s]{1,15}$" />
                   </p:inputText>
                <p:message for="name"/>
                
                <h:outputLabel for="description" value="Descripción:" style="font-weight:bold" />
                <p:inputTextarea id="description" value="#{fileStatusView.selectedFileStatus.descriptionFst}" required="true" label="Descripción: "/>
                <p:message for="description"/>
                
                <h:outputLabel for="initials" value="Iniciales:" style="font-weight:bold" />
                <p:inputText id="initials" value="#{fileStatusView.selectedFileStatus.initialsFst}" required="true" label="Iniciales: " validatorMessage="Introduzca datos correctos(Alfanuméricos sin espacios, no mayor a 5)">
                     <f:validateRegex pattern="[a-zA-Z0-9]{1,5}" />
               </p:inputText>
                <p:message for="initials"/>

                    <p:inplace id="id" style="visibility: hidden">
                        <p:inputText value="#{fileStatusView.selectedFileStatus.idFst}"  />
                    </p:inplace>
                    <h:outputLabel for="id" value="Id:" style="visibility: hidden" />               
                    

                    <br></br>
                    <br></br>
                    <div align="center">
                        <h:panelGrid columns="2" cellpadding="5" >
                            <p:commandButton id="btnEdit" value="Modificar" update=":form-edit:gridEdit" action="#{fileStatusView.edit(fileStatusView.selectedFileStatus)}" icon="ui-icon-pencil"/>
                            <p:commandButton id="btnCancelar" value="Cancelar" onclick="window.location.replace(window.location.href);" icon="ui-icon-cancel" action="adminFileStatus?face-redirect=true"/>
                        </h:panelGrid>
                    </div>
                </h:panelGrid>
            </p:panel>
        </p:dialog>
    </h:form>
</ui:composition>

