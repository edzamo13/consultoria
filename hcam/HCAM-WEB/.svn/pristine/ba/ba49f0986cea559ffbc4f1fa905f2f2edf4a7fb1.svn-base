<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                xmlns:f="http://xmlns.jcp.org/jsf/core">

    <h:form id="createForm">
        <p:dialog id="mdlNewHierLev" header="Crear Tipo Dependencia" widgetVar="dlg2" showEffect="fold" hideEffect="fold" modal="true" >
            <p:panel id="panel" header="Ingrese los datos" style="margin-bottom:10px;">               
                <h:panelGrid id="grid" columns="3" cellpadding="5">

                    <p:outputLabel for="name" value="Nombre:" style="font-weight:bold" />
                    <p:inputText id="name" value="#{tipoDependenciaView.tipos.tdnombre}" label="Nombre: " required="true" validatorMessage="Introduzca datos correctos(AlfanumÃ©ricos, no mayor a 15)" >
                    </p:inputText>
                    <p:message for="name"/>

                    <p:outputLabel for="codigo" value="Codigo:" style="font-weight:bold" />
                    <p:inputText id="codigo" value="#{tipoDependenciaView.tipos.tdcodigo}" required="false">
                    </p:inputText>
                    <p:message for="codigo"/>

                    <p:outputLabel for="descripcion" value="Descripcion:" style="font-weight:bold" />
                    <p:inputText id="descripcion" value="#{tipoDependenciaView.tipos.tddescrip}" required="false" >
                        
                    </p:inputText>
                    <p:message for="descripcion"/>

                    <p:outputLabel for="estado" value="Estado:" style="font-weight:bold" />
                    <p:inputText id="estado" value="#{tipoDependenciaView.tipos.tdestado}" required="false" />
                    <p:message for="estado"/>

                    <br></br>
                    <br></br>
                    <div align="center">
                        <h:panelGrid columns="2" cellpadding="5" >
                            <p:commandButton id="btnGuardad" 
                                             update=":createForm:grid" 
                                             value="Guardar" 
                                             action="#{tipoDependenciaView.save(tipoDependenciaView.tipos)}" 
                                             icon="ui-icon-disk"/>
                            <p:commandButton id="btnCancelar" 
                                             onclick="window.location.replace(window.location.href);" 
                                             value="Cancelar" 
                                             icon="ui-icon-cancel" 
                                             action="adminTipoDependencia?faces-redirect=true" />
                        </h:panelGrid>
                    </div>

                </h:panelGrid>
            </p:panel>
        </p:dialog>
    </h:form>
</ui:composition>