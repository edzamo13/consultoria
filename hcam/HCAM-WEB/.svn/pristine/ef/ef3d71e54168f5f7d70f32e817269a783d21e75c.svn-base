<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                xmlns:f="http://xmlns.jcp.org/jsf/core">

    <h:form id="createForm">
        <p:dialog id="mdlNewHierLev" header="Crear Tipo Dependencia" widgetVar="dlg2" showEffect="fold" hideEffect="fold" modal="true" >
            <p:panel id="panel" header="Ingrese los datos" style="margin-bottom:10px;">               
                <h:panelGrid id="grid" columns="3" cellpadding="5">
                    
                    <p:outputLabel for="name" value="Nombre:" style="font-weight:bold" />
                <p:inputText id="name" value="#{centerView.centers.nameCet}" label="Nombre: " required="true" validatorMessage="Introduzca datos correctos(Alfanuméricos, no mayor a 15)" >
                     <f:validateRegex pattern="^[a-zA-Z0-9\s]{1,15}$" />
                </p:inputText>
                <p:message for="name"/>
                
                <p:outputLabel for="anio" value="Año:" style="font-weight:bold" />
                <p:inputText id="anio" value="#{centerView.centers.provinceCet}" required="true" label="Año: " validatorMessage="Introduzca datos correctos(Alfanuméricos sin espacios)">
                     <f:validateRegex pattern="[a-zA-Z0-9]{3,15}" />
                </p:inputText>
                <p:message for="anio"/>
                
                <p:outputLabel for="descripcion" value="Descripcion:" style="font-weight:bold" />
                <p:inputText id="descripcion" value="#{centerView.centers.cantonCet}" required="true" label="Descripción: " validatorMessage="Introduzca datos correctos(Alfanuméricos sin espacios)">
                     <f:validateRegex pattern="[a-zA-Z0-9]{3,15}" />
                </p:inputText>
                <p:message for="descripcion"/>
                
                <p:outputLabel for="estado" value="Estado:" style="font-weight:bold" />
                <p:inputText id="estado" value="#{centerView.centers.addressCet}" required="true" label="Estado: "/>
                <p:message for="estado"/>
                
                <p:outputLabel for="nivel" value="Nivel:" style="font-weight:bold" />
                <p:inputText id="nivel" value="#{centerView.centers.addressCet}" required="true" label="Nivel: "/>
                <p:message for="nivel"/>
                    <br></br>
                    <br></br>
                    <div align="center">
                        <h:panelGrid columns="2" cellpadding="5" >
                            <p:commandButton id="btnGuardad" update=":createForm:grid" value="Guardar" action="#{centerView.save(centerView.centers)}" icon="ui-icon-disk"/>
                            <p:commandButton id="btnCancelar" onclick="window.location.replace(window.location.href);" value="Cancelar" icon="ui-icon-cancel" action="adminCabeceraTarifario?faces-redirect=true" />
                        </h:panelGrid>
                    </div>
                </h:panelGrid>
            </p:panel>
        </p:dialog>
    </h:form>
</ui:composition>